<Window x:Class="PDV_LANCHES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - PDV Lanches"
        Width="392"
        Height="448"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Background="White">

    <!-- CONTÊINER ÚNICO -->
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">

        <StackPanel Width="350">

            <!-- LOGO -->
            <TextBlock Text="🍔"
                       FontSize="50"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,10"/>

            <TextBlock Text="PDV LANCHES"
                       FontSize="26"
                       FontWeight="ExtraBold"
                       Foreground="#1e3a8a"
                       HorizontalAlignment="Center"/>

            <TextBlock Text="Bem-vindo de volta!"
                       FontSize="14"
                       Foreground="#64748b"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,30"/>

            <!-- USUÁRIO -->
            <TextBlock Text="Usuário"
                       FontWeight="Bold"
                       Foreground="#475569"
                       Margin="0,0,0,5"/>

            <TextBox x:Name="inputLoginNome"
                     Height="40"
                     Margin="0,0,0,20"
                     Padding="10,0"
                     Background="#f1f5f9"
                     BorderThickness="0"
                     VerticalContentAlignment="Center"/>

            <!-- SENHA -->
            <TextBlock Text="Senha"
                       FontWeight="Bold"
                       Foreground="#475569"
                       Margin="0,0,0,5"/>

            <PasswordBox x:Name="inputLoginSenha"
                         Height="40"
                         Margin="0,0,0,30"
                         Padding="10,0"
                         Background="#f1f5f9"
                         BorderThickness="0"
                         VerticalContentAlignment="Center"/>

            <!-- BOTÃO -->
            <Button Content="Entrar no Sistema"
                    Height="45"
                    Background="#2563eb"
                    Foreground="White"
                    FontWeight="Bold"
                    FontSize="15"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="Button_Click"/>

        </StackPanel>
    </Grid>
</Window>
