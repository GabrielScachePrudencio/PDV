<Window x:Class="PDV_LANCHES.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login - PDV Lanches"
        Width="750"
        Height="450"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" 
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="#020617" CornerRadius="20" BorderBrush="#1E293B" BorderThickness="1">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image x:Name="pdvLogo" 
                       Source="{x:Null}" 
                       Width="120" 
                       Height="120" 
                       Stretch="Uniform"
                       Margin="0,0,0,20"/>

                <TextBlock x:Name="pdvNome" 
                           Text="" 
                           FontSize="28" 
                           FontWeight="ExtraBold" 
                           Foreground="White" 
                           HorizontalAlignment="Center"/>

                <TextBlock Text="SISTEMA PDV" 
                           FontSize="12" 
                           Foreground="#475569" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center" 
                           Margin="0,10,0,0"/>
            </StackPanel>

            <Rectangle Grid.Column="1" Width="1" Fill="#1E293B" Margin="0,80"/>

            <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="50">
                <TextBlock Text="Login" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>

                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Usuário" Foreground="#94A3B8" Margin="0,0,0,8" FontSize="12" FontWeight="SemiBold"/>
                    <Border Background="#0F172A" CornerRadius="8" BorderBrush="#1E293B" BorderThickness="1">
                        <TextBox x:Name="inputLoginNome" Height="40" Background="Transparent" Foreground="White" 
                                 BorderThickness="0" Padding="12,0" VerticalContentAlignment="Center" CaretBrush="#3B82F6"/>
                    </Border>
                </StackPanel>

                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Senha" Foreground="#94A3B8" Margin="0,0,0,8" FontSize="12" FontWeight="SemiBold"/>
                    <Border Background="#0F172A" CornerRadius="8" BorderBrush="#1E293B" BorderThickness="1">
                        <PasswordBox x:Name="inputLoginSenha" Height="40" Background="Transparent" Foreground="White" 
                                     BorderThickness="0" Padding="12,0" VerticalContentAlignment="Center" CaretBrush="#3B82F6"/>
                    </Border>
                </StackPanel>

                <Button Content="Entrar no Sistema" Height="45" Background="#2563eb" Foreground="White" 
                        FontWeight="Bold" FontSize="15" BorderThickness="0" Cursor="Hand" Click="Button_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Sair" Background="Transparent" Foreground="#475569" 
                        Margin="0,15,0,0" BorderThickness="0" Cursor="Hand" Click="Fechar_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>