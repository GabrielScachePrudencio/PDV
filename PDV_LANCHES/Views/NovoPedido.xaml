<Window x:Class="PDV_LANCHES.Views.NovoPedido"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized" WindowStyle="SingleBorderWindow"
        Title="Novo Pedido" Height="650" Width="1000"
        WindowStartupLocation="CenterScreen" Background="#f1f5f9">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10,0,10,25">
            <Button x:Name="btnVoltar" Content="" FontFamily="Segoe MDL2 Assets" 
                    FontSize="18" Width="40" Height="40" Background="#1e3a8a" Foreground="White" 
                    BorderThickness="0" Cursor="Hand" Click="btnVoltar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="20"/>
                    </Style>
                </Button.Resources>
            </Button>
            <TextBlock Text="Finalizar Novo Pedido" FontSize="28" FontWeight="ExtraBold" Foreground="#1e3a8a" VerticalAlignment="Center" Margin="15,0,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20" Margin="10,0,10,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="270" ShadowDepth="2" Opacity="0.05"/>
            </Border.Effect>
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,30,0">
                    <TextBlock Text="IDENTIFICAÇÃO DO CLIENTE" FontSize="10" FontWeight="Bold" Foreground="#1e3a8a" Margin="0,0,0,5"/>
                    <TextBox x:Name="inputCpfCliente" Width="250" Height="40" Padding="10,0" FontSize="14" VerticalContentAlignment="Center" Background="#f8fafc" BorderThickness="1" BorderBrush="#cbd5e1"/>
                </StackPanel>
                <TextBlock x:Name="LabelCPF" VerticalAlignment="Bottom" Margin="0,0,0,8" FontSize="18" FontWeight="Bold" Foreground="#2563eb"/>
            </StackPanel>
        </Border>

        <Grid Grid.Row="2" Margin="10,0">
            <ScrollViewer x:Name="scrollCardapio" VerticalScrollBarVisibility="Auto" Visibility="Visible">
                <ItemsControl x:Name="ListaCardapioItems">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="230" Margin="0,0,15,15" Background="White" CornerRadius="12" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="{Binding Categoria}" FontSize="10" Foreground="#64748b" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding Nome}" FontSize="16" FontWeight="Bold" Foreground="#1e3a8a" Margin="0,5"/>
                                    <TextBlock Text="{Binding Valor, StringFormat='R$ {0:F2}'}" FontSize="18" Foreground="#1e3a8a" FontWeight="Bold"/>

                                    <Grid Margin="0,15,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Text="{Binding QuantidadeSelecionada, UpdateSourceTrigger=PropertyChanged}" 
                                                 Height="35" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="#f1f5f9" BorderThickness="0"/>
                                        <Button Grid.Column="1" Content="ADICIONAR" Height="35" Margin="5,0,0,0" Background="#2563eb" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="AdicionarItem_Click" Tag="{Binding}">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="6"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <Border x:Name="borderResumo" Visibility="Collapsed" Background="White" CornerRadius="15" Padding="30">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Opacity="0.1" ShadowDepth="2"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="stackResumoItens"/>
                </ScrollViewer>
            </Border>
        </Grid>

        <Border Grid.Row="3" Background="#1e3a8a" CornerRadius="15" Margin="10,10,10,10" Padding="30,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Total do Pedido:" FontSize="16" Foreground="#93c5fd" VerticalAlignment="Center"/>
                    <TextBlock x:Name="txtTotalDisplay" Text="R$ 0,00" FontSize="32" FontWeight="Bold" Foreground="White" Margin="15,0,0,0"/>
                </StackPanel>

                <Button x:Name="buttonProximo" 
                Content="PRÓXIMO" 
                HorizontalAlignment="Right" 
                VerticalAlignment="Center" 
                Width="220" Height="50" 
                Background="White" Foreground="#1e3a8a" 
                FontSize="15" FontWeight="ExtraBold" 
                BorderThickness="0" 
                Click="Button_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>