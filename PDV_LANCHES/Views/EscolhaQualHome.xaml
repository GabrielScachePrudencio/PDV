<Window x:Class="PDV_LANCHES.Views.EscolhaQualHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard de Pedidos"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen"
        Background="#f1f5f9">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ================= TOPO ================= -->
        <Border Grid.Row="0"
                Background="White"
                CornerRadius="16"
                Padding="20"
                Margin="0,0,0,25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="4"
                                  Opacity="0.08"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal"
                            VerticalAlignment="Center">

                    <Border Width="50"
                            Height="50"
                            Background="#1e40af"
                            CornerRadius="12"
                            Margin="0,0,15,0">
                        <TextBlock Text="👤"
                                   FontSize="22"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <StackPanel>
                        <TextBlock Text="Bem-vindo ao PDV"
                                   FontSize="13"
                                   Foreground="#64748b"/>
                        <TextBlock x:Name="usuarioLogadoHome"
                                   Text="Operador"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#1e40af"/>
                    </StackPanel>
                </StackPanel>

                <Button Grid.Column="1"
                        Name="Sair"
                        Content="Sair"
                        Width="90"
                        Height="42"
                        Background="#ef4444"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Sair_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <!-- ================= CONTEÚDO ================= -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Padding="30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20"
                                  ShadowDepth="4"
                                  Opacity="0.08"/>
            </Border.Effect>

            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="320">

                <TextBlock Text="Escolha uma opção"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#0f172a"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <Button Name="irVendas"
                        Content="🛒  Vendas"
                        Height="60"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="#22c55e"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Margin="0,0,0,15"
                        Click="IrVendas">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="14"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Name="irAdministrativo"
                        Content="⚙️  Administrativo"
                        Height="60"
                        FontSize="18"
                        FontWeight="Bold"
                        Background="#3b82f6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="IrAdministrativo">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="14"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </StackPanel>
        </Border>

    </Grid>
</Window>
