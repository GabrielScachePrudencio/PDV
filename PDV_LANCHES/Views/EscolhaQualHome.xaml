<Window x:Class="PDV_LANCHES.Views.EscolhaQualHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard de Seleção"
        WindowState="Maximized"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="#020617">

    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0F172A" CornerRadius="20" BorderBrush="#1E293B" BorderThickness="1" Padding="20" Margin="0,0,0,30">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="55" Height="55" Background="#1E293B" CornerRadius="15" Margin="0,0,15,0">
                        <TextBlock Text="👤" FontSize="26" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Sistema de Gestão" FontSize="13" Foreground="#64748B"/>
                        <TextBlock x:Name="usuarioLogadoHome" Text="Operador" FontSize="22" FontWeight="Bold" Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <Button HorizontalAlignment="Right" Name="Sair" Content="Sair do Sistema" Width="140" Height="45" 
                        Background="#450A0A" Foreground="#F87171" FontWeight="Bold" BorderThickness="0" 
                        Cursor="Hand" Click="Sair_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="O que deseja acessar hoje?" FontSize="28" FontWeight="Bold" Foreground="White" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <UniformGrid Columns="2" HorizontalAlignment="Center">

                    <Button Name="irVendas" Width="220" Height="220" Margin="15" Background="#0F172A" 
                            BorderBrush="#22C55E" BorderThickness="1" Cursor="Hand" Click="IrVendas">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel>
                            <TextBlock Text="🛒" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="VENDAS" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Iniciar pedidos" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Name="irAdministrativo" Width="220" Height="220" Margin="15" Background="#0F172A" 
                            BorderBrush="#3B82F6" BorderThickness="1" Cursor="Hand" Click="IrAdministrativo">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="25"/>
                            </Style>
                        </Button.Resources>
                        <StackPanel>
                            <TextBlock Text="⚙️" FontSize="60" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                            <TextBlock Text="ADMIN" FontSize="20" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center"/>
                            <TextBlock Text="Gestão e Equipe" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Button>

                </UniformGrid>
            </StackPanel>
        </Grid>
    </Grid>
</Window>