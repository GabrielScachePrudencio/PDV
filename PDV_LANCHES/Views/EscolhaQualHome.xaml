<Window x:Class="PDV_LANCHES.Views.EscolhaQualHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Title="Dashboard de Pedidos" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" Background="#f8fafc">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="45" Height="45" Background="#1e3a8a" CornerRadius="10" Margin="0,0,15,0">
                        <TextBlock Text="👤" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Bem-vindo ao PDV," FontSize="12" Foreground="#64748b"/>
                        <TextBlock x:Name="usuarioLogadoHome" Text="Operador" FontSize="18" FontWeight="Bold" Foreground="#1e3a8a"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    
                    <Button Name="Sair" Content="Sair" Background="#ef4444" Foreground="White" 
                    FontWeight="Bold" Width="80" Height="40" BorderThickness="0" Click="Sair_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20">
            <Grid>
                <StackPanel>
                    <Button Name="irVendas" Content="Vendas" FontWeight="Bold" Width="80" Height="40" BorderThickness="0" Click="IrVendas"/>
                    <Button Name="irAdministrativo" Content="Administrativo" FontWeight="Bold" Width="80" Height="40" BorderThickness="0" Click="IrAdministrativo"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>