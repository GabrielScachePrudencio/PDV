<Window x:Class="PDV_LANCHES.Views.PedidoInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Pedido" 
        WindowState="Maximized" 
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen" 
        Background="#020617">

    <Window.Resources>
        <Style x:Key="DarkComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#334155"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="MainGrid">
                            <ToggleButton x:Name="ToggleButton"
                                          Background="{TemplateBinding Background}"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="templateRoot" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" Grid.Column="1" Data="M 0 0 L 4 4 L 8 0 Z" Fill="#94A3B8" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" 
                          IsHitTestVisible="False" 
                          Content="{TemplateBinding SelectionBoxItem}" 
                          ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                          ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                          Margin="{TemplateBinding Padding}" 
                          VerticalAlignment="Center" 
                          HorizontalAlignment="Left"/>
                            <Popup x:Name="PART_Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" Background="#0F172A" BorderBrush="#334155" BorderThickness="1" CornerRadius="8" Margin="0,4,0,0" MinWidth="{Binding ActualWidth, ElementName=MainGrid}">
                                    <ScrollViewer MaxHeight="300">
                                        <ItemsPresenter />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0F172A" BorderBrush="#1E293B" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="0,40,0,30">
                    <Border Width="60" Height="60" CornerRadius="30" BorderBrush="#22C55E" BorderThickness="2" HorizontalAlignment="Center">
                        <TextBlock Text="✏️" FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <TextBlock Text="EDITANDO PEDIDO" Foreground="White" FontSize="14" FontWeight="Black" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                </StackPanel>

                
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="DETALHES DO PEDIDO" FontSize="11" FontWeight="Black" Foreground="#22C55E"/>
                <TextBlock Text="Edição de Informações" FontSize="28" FontWeight="SemiBold" Foreground="White" Margin="0,5,0,0"/>
                <Separator Margin="0,15,0,0" Background="#1E293B"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                    <TextBlock Text="CPF DO CLIENTE" Foreground="#64748B" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                    <TextBox x:Name="pedidoCpfInfo" Height="45" Padding="12" Background="#0F172A" BorderBrush="#1E293B" Foreground="White" VerticalContentAlignment="Center">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="0,0,15,0">
                    <TextBlock Text="STATUS" Foreground="#64748B" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ComboBox Style="{StaticResource DarkComboBox}" x:Name="ComboBoxStatusPedido" Height="45" SelectionChanged="ComboBox_SelectionChanged"/>
                </StackPanel>
                
                
                <StackPanel Grid.Column="2" Margin="0,0,15,0">
                    <TextBlock Text="Forma de Pagamento" Foreground="#64748B" FontSize="10" FontWeight="Bold" Margin="0,0,0,8"/>
                    <ComboBox Style="{StaticResource DarkComboBox}" 
          x:Name="ComboBoxAlterarFormaDePagamento" 
          Height="45" 
          SelectionChanged="ComboBoxAlterarFormaDePagamento_SelectionChanged">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Descricao}" Foreground="White"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                    </ComboBox>
                </StackPanel>
                
                

                <StackPanel Grid.Column="3" VerticalAlignment="Bottom">
                    <Button x:Name="btnCardapioCompleto" Content="+ Adicionar Itens" Width="200" Height="45" Background="#22C55E" Foreground="#064E3B" FontWeight="Bold" Click="CardapioCompleto_click" Cursor="Hand">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>

            <Border Grid.Row="2" Background="#0F172A" CornerRadius="16" Padding="15" BorderBrush="#1E293B" BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="itensPedidoStackPanel"/>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="3" Margin="0,20,0,20" Padding="30,20" Background="#1E293B" CornerRadius="16">
                <DockPanel>
                    <TextBlock Text="TOTAL DO PEDIDO" Foreground="#94A3B8" VerticalAlignment="Center" FontWeight="Bold" FontSize="14"/>
                    <TextBlock x:Name="pedidoTotalInfo" Text="R$ 0,00" HorizontalAlignment="Right" Foreground="#22C55E" FontSize="32" FontWeight="Black"/>
                </DockPanel>
            </Border>

            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="1" Content="CANCELAR ALTERAÇÕES" Width="250" Height="60" Margin="0,0,15,0" Background="Transparent" Foreground="#64748B" FontWeight="Bold" BorderBrush="#1E293B" BorderThickness="1" Click="Fechar_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="2" x:Name="btnSalvar" Content="CONFIRMAR E SALVAR" Width="300" Height="60" Background="#22C55E" Foreground="#064E3B" FontWeight="Black" FontSize="16" Click="Salvar_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>