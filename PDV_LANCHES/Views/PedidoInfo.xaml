<Window x:Class="PDV_LANCHES.Views.PedidoInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Editar Pedido" Height="600" Width="450"
        WindowStartupLocation="CenterScreen" Background="Transparent"
        WindowStyle="None" AllowsTransparency="True">

    <Border BorderBrush="#e2e8f0" BorderThickness="1" CornerRadius="20" Background="#f8fafc">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="EDITAR INFORMAÇÕES DO PEDIDO" FontSize="12" FontWeight="Bold" Foreground="#64748b"/>
                <Separator Margin="0,10,0,0" Background="#e2e8f0"/>
            </StackPanel>

            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="CPF do Cliente:" Foreground="#64748b" FontSize="11" Margin="0,0,0,5"/>
                <TextBox x:Name="pedidoCpfInfo" Text="---" Padding="10,5" Background="White" BorderBrush="#cbd5e1" BorderThickness="1" Foreground="#1e3a8a" FontWeight="Bold"/>

                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Margin="0,0,5,0">
                        <TextBlock Text="Data Criação (Leitura):" Foreground="#64748b" FontSize="11" Margin="0,0,0,5"/>
                        <TextBlock x:Name="pedidoDataInfo" Text="---" Foreground="#94a3b8" FontSize="13" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                        <TextBlock Text="Data Entrega:" Foreground="#64748b" FontSize="11" Margin="0,0,0,5"/>
                        <DatePicker x:Name="pedidoDataEntregaInfo" SelectedDateFormat="Short" Background="White"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <Border Grid.Row="2" Background="White" CornerRadius="12" Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="itensPedidoStackPanel">
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="3" Margin="0,20,0,20" Padding="15" Background="#1e3a8a" CornerRadius="10">
                <Grid>
                    <TextBlock Text="TOTAL ATUALIZADO" Foreground="#93c5fd" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="pedidoTotalInfo" Text="R$ 0,00" HorizontalAlignment="Right" Foreground="White" FontSize="22" FontWeight="ExtraBold"/>
                </Grid>
            </Border>

            <UniformGrid Grid.Row="4" Columns="2" Margin="0,5,0,0">
                <Button Content="FECHAR" Height="45" Margin="0,0,5,0" Background="#e2e8f0" Foreground="#1e3a8a" FontWeight="Bold" BorderThickness="0" Click="Fechar_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button x:Name="btnSalvar" Content="SALVAR" Height="45" Margin="5,0,0,0" Background="#22c55e" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="Salvar_Click" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </UniformGrid>
        </Grid>
    </Border>
</Window>