<Window x:Class="PDV_LANCHES.Views.HomeAdministrativo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized" WindowStyle="SingleBorderWindow"
        Title="Painel Administrativo - Dark Mode" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" Background="#020617">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="12,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                    <Setter Property="Foreground" Value="#3B82F6"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#0F172A" CornerRadius="16" Padding="20" Margin="0,0,0,24" BorderBrush="#1E293B" BorderThickness="1" Grid.ColumnSpan="2">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="50" Height="50" Background="#3B82F6" CornerRadius="12" Margin="0,0,16,0">
                        <TextBlock Text="👤" Foreground="White" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Sistema Administrativo" FontSize="11" Foreground="#64748B" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="usuarioLogadoHome" Text="Administrador" FontSize="18" FontWeight="Bold" Foreground="White"/>
                            <Border Background="#064E3B" CornerRadius="6" Padding="8,2" Margin="12,0,0,0" VerticalAlignment="Center">
                                <TextBlock Text="Sessão Ativa" Foreground="#34D399" FontSize="9" FontWeight="Bold"/>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button x:Name="BtnVoltarParaEscolha" Content="Voltar" Background="#1E293B" Foreground="White" 
                            FontWeight="SemiBold" Width="110" Height="40" Margin="0,0,10,0" BorderThickness="0" Click="VoltarParaEscolha_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Name="Sair" Content="Encerrar" Background="#450A0A" Foreground="#F87171" 
                            FontWeight="Bold" Width="100" Height="40" BorderThickness="0" Click="Sair_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#0F172A" CornerRadius="16" Margin="0,0,24,0" BorderBrush="#1E293B" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Margin="0,30,0,20">
                        <Border Width="90" Height="90" CornerRadius="45" BorderBrush="#1E293B" BorderThickness="2" Padding="4" HorizontalAlignment="Center">
                            <Border CornerRadius="45" ClipToBounds="True" Background="#020617">
                                <Grid>
                                    <Image x:Name="imgLogoLoja" Stretch="UniformToFill" />
                                    <TextBlock x:Name="txtLogoPlaceholder" Text="🍴" FontSize="35" Foreground="#334155" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                                </Grid>
                            </Border>
                        </Border>
                        <TextBlock x:Name="txtNomeLoja" Text="NOME DA LOJA" Foreground="White" FontSize="14" FontWeight="Black" Margin="15,15,15,0" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                        <Border Height="1" Background="#1E293B" Margin="40,20,40,10"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <Button Style="{StaticResource MenuButtonStyle}" Content="⚙  Configurações Gerais" Click="ConfiguracoesGeraisVA"/>
                        <Button Style="{StaticResource MenuButtonStyle}" Content="🍔  Cardápio" Click="AllCardapio"/>
                        <Button Style="{StaticResource MenuButtonStyle}" Content="📊  Relatórios" Click="AllRelatorio"/>

                        <Button x:Name="btnUsuarios" Style="{StaticResource MenuButtonStyle}" Content="👥  Usuários" Click="AllUsuario"/>
                        <Button Style="{StaticResource MenuButtonStyle}" Content="📄  Fiscal" Click="ConfiguracaoFiscal"/>
                        <Button x:Name="btnBanco" Style="{StaticResource MenuButtonStyle}" Content="💾  Banco de Dados" Click="ConfiguracaoBanco"/>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="1" Background="#0F172A" CornerRadius="16" BorderBrush="#1E293B" BorderThickness="1">
                <ContentControl x:Name="ConteudoConfiguracoes" Margin="0" />
            </Border>
        </Grid>
    </Grid>
</Window>