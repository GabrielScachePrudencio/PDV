<Window x:Class="PDV_LANCHES.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        Title="Dashboard de Pedidos" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" Background="#f8fafc">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="15" Padding="20" Margin="0,0,0,20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Opacity="0.05" ShadowDepth="2"/>
            </Border.Effect>
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Border Width="45" Height="45" Background="#1e3a8a" CornerRadius="10" Margin="0,0,15,0">
                        <TextBlock Text="👤" Foreground="White" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel>
                        <TextBlock Text="Bem-vindo ao PDV," FontSize="12" Foreground="#64748b"/>
                        <TextBlock x:Name="usuarioLogadoHome" Text="Operador" FontSize="18" FontWeight="Bold" Foreground="#1e3a8a"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Name="novoPedido" Content="+ Novo Pedido" Background="#2563eb" Foreground="White" 
                            FontWeight="Bold" Width="150" Height="40" Margin="0,0,10,0" BorderThickness="0" Click="novoPedido_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Name="Sair" Content="Sair" Background="#ef4444" Foreground="White" 
                            FontWeight="Bold" Width="80" Height="40" BorderThickness="0" Click="Sair_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Border Grid.Row="1" Background="White" CornerRadius="15" Padding="15" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="STATUS" FontSize="10" FontWeight="Bold" Foreground="#1e3a8a" Margin="0,0,0,5"/>
                    <ComboBox Width="150" Height="35" BorderThickness="1" BorderBrush="#cbd5e1" SelectedIndex="0"/>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="PERÍODO" FontSize="10" FontWeight="Bold" Foreground="#1e3a8a" Margin="0,0,0,5"/>
                    <ComboBox Width="120" Height="35" BorderThickness="1" BorderBrush="#cbd5e1" SelectedIndex="0"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Text="BUSCAR CLIENTE (CPF)" FontSize="10" FontWeight="Bold" Foreground="#1e3a8a" Margin="0,0,0,5"/>
                    <TextBox Width="300" Height="35" Padding="10,0" VerticalContentAlignment="Center" Background="#f1f5f9" BorderThickness="0"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ListaPedidos">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="0,0,0,15" Background="White" CornerRadius="15" Padding="20">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="10" Opacity="0.05" ShadowDepth="2"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel VerticalAlignment="Center" Margin="0,0,30,0">
                                    <TextBlock Text="Nº PEDIDO" FontSize="10" Foreground="#94a3b8"/>
                                    <TextBlock Text="{Binding Id, StringFormat='#{0}'}" FontSize="20" FontWeight="Bold" Foreground="#1e3a8a"/>
                                    <Border Background="#dbeafe" CornerRadius="5" Padding="5,2" Margin="0,5,0,0">
                                        <TextBlock Text="{Binding StatusPedido}" Foreground="#1e40af" FontWeight="Bold" FontSize="11" HorizontalAlignment="Center"/>
                                    </Border>
                                </StackPanel>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding CpfCliente, StringFormat='Cliente: {0}'}" FontWeight="Bold" Foreground="#475569" Margin="0,0,0,10"/>
                                    <ItemsControl ItemsSource="{Binding Itens}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#f1f5f9" BorderBrush="#dbeafe" BorderThickness="1" CornerRadius="5" Padding="8,4" Margin="0,0,8,5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding Quantidade}" FontWeight="Bold" Foreground="#2563eb"/>
                                                        <TextBlock Text="x " Foreground="#2563eb"/>
                                                        <TextBlock Text="{Binding IdCardapio}" FontSize="12" Foreground="#1e3a8a"/>
                                                    </StackPanel>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding ValorTotal, StringFormat='R$ {0:F2}'}" FontSize="24" FontWeight="Bold" Foreground="#1e3a8a" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding DataCriacao, StringFormat='Criado em: {0:dd/MM/yyyy HH:mm}'}" FontSize="11" Foreground="#94a3b8" Margin="0,5,0,0"/>

                                    <Button 
                                        Content="Ver Detalhes"
                                        Click="VerDetalhes_click"
                                        Background="#e2e8f0" 
                                        Foreground="#1e3a8a" 
                                        FontWeight="SemiBold" 
                                        Padding="15,5" 
                                        BorderThickness="0" 
                                        Cursor="Hand">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="5"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>