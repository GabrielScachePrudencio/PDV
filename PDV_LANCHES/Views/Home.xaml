<Window x:Class="PDV_LANCHES.Views.Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized" WindowStyle="SingleBorderWindow"
        Title="PDV - Operacional" Height="800" Width="1200" 
        WindowStartupLocation="CenterScreen" Background="#020617">
    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="12,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="20,0,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                    <Setter Property="Foreground" Value="#22C55E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#0F172A" BorderBrush="#1E293B" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Margin="0,40,0,30">
                    <Border Width="90" Height="90" CornerRadius="45" BorderBrush="#22C55E" BorderThickness="2" Padding="4" HorizontalAlignment="Center">
                        <Border CornerRadius="45" ClipToBounds="True" Background="#020617">
                            <Grid>
                                <Image x:Name="imgLogoMenu" Stretch="UniformToFill" />
                                <TextBlock x:Name="txtLogoPlaceholder" Text="🍴" FontSize="35" Foreground="#334155" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                            </Grid>
                        </Border>
                    </Border>
                    <TextBlock x:Name="txtNomeLoja" Text="CARREGANDO..." Foreground="White" FontSize="15" FontWeight="Black" Margin="15,15,15,0" HorizontalAlignment="Center" TextAlignment="Center" TextWrapping="Wrap"/>
                    <Border Background="#064E3B" CornerRadius="4" Padding="8,2" HorizontalAlignment="Center" Margin="0,8,0,0">
                        <TextBlock Text="OPERACIONAL" Foreground="#34D399" FontSize="9" FontWeight="Black" />
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="1">
                    <Button Style="{StaticResource MenuButtonStyle}" x:Name="novoPedido" Content="➕  Novo Pedido" Click="novoPedido_Click" Foreground="White" Background="#166534" Margin="12,4,12,20"/>
                    <Button Style="{StaticResource MenuButtonStyle}" Content="📋  Pedidos Ativos" />
                    <Button Style="{StaticResource MenuButtonStyle}" Content="✅  Finalizados" />
                    <Button Style="{StaticResource MenuButtonStyle}" Content="📦  Estoque Rápido" />
                </StackPanel>

                <StackPanel Grid.Row="2" Margin="15,20">
                    <Button Name="voltarHome" Content="⚙ Painel Administrativo" Background="#1E293B" Foreground="White" Height="40" Margin="0,5" Click="VoltarParaEscolha_Click" Visibility="Collapsed">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button Content="Sair" Background="#450A0A" Foreground="#F87171" FontWeight="Bold" Height="40" Click="Sair_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#0F172A" CornerRadius="16" Padding="25,15" BorderBrush="#1E293B" BorderThickness="1" Margin="0,0,0,20">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Painel de Atendimento" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                        <TextBlock Text="•" Foreground="#334155" Margin="12,0" VerticalAlignment="Center"/>
                        <TextBlock x:Name="usuarioLogadoHome" Text="Operador" Foreground="#94A3B8" VerticalAlignment="Center"/>
                    </StackPanel>
                    <TextBlock Text="18 de Jan, 2026" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="#64748B" FontSize="12"/>
                </Grid>
            </Border>

            <Border Grid.Row="1" Background="#0F172A" CornerRadius="16" Padding="20" BorderBrush="#1E293B" BorderThickness="1">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="0,0,20,0">
                        <TextBlock Text="STATUS" FontSize="10" FontWeight="Bold" Foreground="#475569" Margin="0,0,0,8"/>
                        <ComboBox Width="160" Height="40" Background="#1E293B" BorderThickness="0" Foreground="White"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="BUSCAR CLIENTE" FontSize="10" FontWeight="Bold" Foreground="#475569" Margin="0,0,0,8"/>
                        <TextBox Width="400" Height="40" Background="#1E293B" Foreground="White" BorderThickness="0" Padding="15,10" VerticalContentAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="2" Margin="0,20,0,0" VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="ListaPedidos">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,16" Background="#0F172A" CornerRadius="16" Padding="20" BorderBrush="#1E293B" BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel VerticalAlignment="Center" Margin="0,0,30,0">
                                        <TextBlock Text="PEDIDO" FontSize="10" Foreground="#475569" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Id, StringFormat='#{0}'}" FontSize="24" FontWeight="Bold" Foreground="White"/>
                                        <Border Background="#064E3B" CornerRadius="6" Padding="8,4" Margin="0,8,0,0">
                                            <TextBlock Text="{Binding StatusPedido}" Foreground="#34D399" FontWeight="Bold" FontSize="11"/>
                                        </Border>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding CpfCliente, StringFormat='CLIENTE: {0}'}" FontSize="11" Foreground="#94A3B8" Margin="0,0,0,10" FontWeight="SemiBold"/>
                                        <ItemsControl ItemsSource="{Binding Itens}">
                                            <ItemsControl.ItemsPanel>
                                                <ItemsPanelTemplate>
                                                    <WrapPanel/>
                                                </ItemsPanelTemplate>
                                            </ItemsControl.ItemsPanel>
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border Background="#1E293B" CornerRadius="8" Padding="10,6" Margin="0,0,8,6">
                                                        <TextBlock Foreground="White" FontSize="12">
                                                            <Run Text="{Binding Quantidade}" FontWeight="Bold" Foreground="#22C55E"/>
                                                            <Run Text="x"/>
                                                            <Run Text="{Binding IdCardapio}"/>
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                    <StackPanel Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding ValorTotal, StringFormat='R$ {0:F2}'}" FontSize="26" FontWeight="Bold" Foreground="White"/>
                                        <Button Content="Detalhes" Click="VerDetalhes_click" Width="110" Height="38" Margin="0,10,0,0" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0">
                                            <Button.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>