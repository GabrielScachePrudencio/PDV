<Window x:Class="PDV_LANCHES.Views.Estoque"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        Background="#020617"
        Title="Gerenciamento de Estoque"
        Height="800"
        Width="1400">

    <!-- ===================== RESOURCES ===================== -->
    <Window.Resources>
        <Style x:Key="ModernPrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="Padding" Value="25,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="60,40">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- HEADER -->
            <RowDefinition Height="Auto"/>
            <!-- PAINEL LANÇAMENTO -->
            <RowDefinition Height="*"/>
            <!-- CONTEÚDO -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
            <StackPanel>
                <TextBlock Text="MOVIMENTAÇÃO E SALDO"
                           Foreground="White"
                           FontSize="26"
                           FontWeight="Black"/>
                <Border Height="4"
                        Width="60"
                        Background="#3B82F6"
                        Margin="0,8,0,0"
                        CornerRadius="2"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                <Button Content="VOLTAR PARA HOME"
                        Click="Voltar_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Background="Transparent"
                        BorderBrush="#334155"
                        BorderThickness="1"
                        Margin="0,0,10,0"/>

                <Button x:Name="btnLancarCompra"
                        Content="+ LANÇAR COMPRA"
                        Click="LancarCompra_Click"
                        Style="{StaticResource ModernPrimaryButton}"
                        Background="#10B981"
                        Height="48"
                        Width="150"/>
            </StackPanel>
        </Grid>


        <Border x:Name="PainelLancamento"
            Grid.Row="1"
            Margin="0,80,0,20"
            Background="#020617"
            BorderBrush="#1E293B"
            BorderThickness="1"
            CornerRadius="16"
            Padding="20"
            Visibility="Collapsed">

        <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- COMBO PRODUTOS -->
        <StackPanel Grid.Column="0" Margin="0,0,20,0">
            <TextBlock Text="Produto" Foreground="#94A3B8" FontSize="11"/>
            <ComboBox x:Name="cbProdutos"
                      Height="38"
                      DisplayMemberPath="Nome"
                      SelectedValuePath="Id"/>
        </StackPanel>

        <!-- QUANTIDADE -->
        <StackPanel Grid.Column="1" Margin="0,0,20,0">
            <TextBlock Text="Quantidade" Foreground="#94A3B8" FontSize="11"/>
            <TextBox x:Name="txtQuantidade"
                     Height="38"
                     Background="#0F172A"
                     Foreground="White"
                     BorderBrush="#1E293B"/>
        </StackPanel>

        <!-- BOTÕES -->
        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Bottom">
            <Button Content="Adicionar"
                    Click="Atualizar_Click"
                    Style="{StaticResource ModernPrimaryButton}"
                    Background="#3B82F6"
                    Margin="0,0,10,0"/>

            <Button Content="Cancelar"
                    Click="Cancelar_Click"
                    Style="{StaticResource ModernPrimaryButton}"
                    Background="#334155"/>
        </StackPanel>
    </Grid>
    </Border>
        <Grid Grid.Row="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,30">
          
        </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <DockPanel Grid.Column="0" Margin="0,0,40,0">
                    <TextBlock DockPanel.Dock="Top" Text="LOG DE OPERAÇÕES" Foreground="#475569" FontWeight="Bold" FontSize="11" Margin="5,0,0,15"/>

                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <ItemsControl x:Name="dgMovimentacoes">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Margin="0,0,0,12" Background="#0F172A" CornerRadius="12" Padding="15" BorderBrush="#1E293B" BorderThickness="1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border x:Name="TypeBadge" Grid.Column="0" CornerRadius="6" Padding="5" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Tipo}" HorizontalAlignment="Center" FontSize="11" FontWeight="Black" Foreground="White"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="20,0">
                                                <TextBlock Foreground="white">
                                             <Run Text="{Binding QuantidadeMovimentada}" />
                                             <Run Text="x" />
                                             <Run Text="{Binding Produto}" />
                                                </TextBlock>
                                                <TextBlock Foreground="#64748B" FontSize="11">
                                                <Run Text="#ID_PEDIDO:"/>
                                                <Run Text="{Binding PedidoId}"/>
                                               
                                                <Run Text=" - "/>
                                                <Run Text="{Binding DataMovimentacao, StringFormat='dd/MM/yyyy HH:mm'}"/>
                                                <Run Text=" Usuario: "/>
                                                <Run Text="{Binding Usuario}" FontWeight="Bold"/>



                                                </TextBlock>
                                            </StackPanel>

                                            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                                <Border Background="#1E293B" CornerRadius="6" Padding="10,5">
                                                    <TextBlock Text="{Binding QuantidadeAntes}" Foreground="#94A3B8" FontSize="14" FontWeight="Bold"/>
                                                </Border>

                                                <TextBlock Text="→" Foreground="#3B82F6" FontSize="20" FontWeight="Bold" Margin="12,0" VerticalAlignment="Center"/>

                                                <Border Background="#3B82F6" CornerRadius="6" Padding="10,5">
                                                    <TextBlock Text="{Binding QuantidadeDepois}" Foreground="White" FontSize="14" FontWeight="Bold"/>
                                                </Border>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <DataTemplate.Triggers>
                                        <DataTrigger Binding="{Binding Tipo}" Value="VENDA">
                                            <Setter TargetName="TypeBadge" Property="Background" Value="#EF4444"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Tipo}" Value="COMPRA">
                                            <Setter TargetName="TypeBadge" Property="Background" Value="#22C55E"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding Tipo}" Value="AJUSTE">
                                            <Setter TargetName="TypeBadge" Property="Background" Value="#F59E0B"/>
                                        </DataTrigger>
                                    </DataTemplate.Triggers>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </DockPanel>

                <Border Grid.Column="1" Background="#0F172A" CornerRadius="20" BorderBrush="#1E293B" BorderThickness="1" Padding="25">
                    <DockPanel>
                        <TextBlock DockPanel.Dock="Top" Text="TOTAL EM ESTOQUE" Foreground="White" FontSize="14" FontWeight="Bold" Margin="0,0,0,20"/>

                        <ScrollViewer VerticalScrollBarVisibility="Hidden">
                            <ItemsControl x:Name="dgEstoque">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#1E293B" BorderThickness="0,0,0,1" Padding="0,15">
                                            <Grid>
                                                <StackPanel VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Produto}" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                                                    <TextBlock Text="Unidades disponíveis" Foreground="#475569" FontSize="10"/>
                                                </StackPanel>

                                                <Border HorizontalAlignment="Right" Background="#020617" CornerRadius="8" Padding="12,6">
                                                    <TextBlock Text="{Binding QuantidadeDepois}" Foreground="#10B981" FontSize="18" FontWeight="Black" VerticalAlignment="Center"/>
                                                </Border>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </DockPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>