<UserControl x:Class="PDV_LANCHES.Views.ViewsAdministrativo.AllRelatorio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="FilterControl" TargetType="Control">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="RowBackground" Value="#0F172A"/>
            <Setter Property="AlternatingRowBackground" Value="#1E293B"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
        </Style>
    </UserControl.Resources>

    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,24">
            <TextBlock Text="Relatórios de Vendas" FontSize="26" FontWeight="Bold" Foreground="White"/>
            <TextBlock Text="Analise o desempenho financeiro e histórico de pedidos." Foreground="#64748B" FontSize="14" Margin="0,4,0,16"/>

            <UniformGrid Columns="3" Height="80">
                <Border Background="#0F172A" CornerRadius="12" BorderBrush="#1E293B" BorderThickness="1" Margin="0,0,12,0">
                    <StackPanel VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="TOTAL VENDIDO" Foreground="#94A3B8" FontSize="11" FontWeight="Bold"/>
                        <TextBlock Text="R$ 0,00" Foreground="#10B981" FontSize="20" FontWeight="Black"/>
                    </StackPanel>
                </Border>
                <Border Background="#0F172A" CornerRadius="12" BorderBrush="#1E293B" BorderThickness="1" Margin="0,0,12,0">
                    <StackPanel VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="PEDIDOS PAGOS" Foreground="#94A3B8" FontSize="11" FontWeight="Bold"/>
                        <TextBlock Text="0" Foreground="White" FontSize="20" FontWeight="Black"/>
                    </StackPanel>
                </Border>
                <Border Background="#450A0A" CornerRadius="12" Opacity="0.8">
                    <StackPanel VerticalAlignment="Center" Margin="20,0">
                        <TextBlock Text="CANCELADOS" Foreground="#F87171" FontSize="11" FontWeight="Bold"/>
                        <TextBlock Text="R$ 0,00" Foreground="#F87171" FontSize="20" FontWeight="Black"/>
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>

        <Border Grid.Row="1" Background="#0F172A" CornerRadius="12" Padding="16" Margin="0,0,0,20" BorderBrush="#1E293B" BorderThickness="1">
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="Início" Foreground="#64748B" FontSize="11" Margin="0,0,0,5"/>
                    <DatePicker Width="130" Style="{StaticResource FilterControl}"/>
                </StackPanel>

                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="Fim" Foreground="#64748B" FontSize="11" Margin="0,0,0,5"/>
                    <DatePicker Width="130" Style="{StaticResource FilterControl}"/>
                </StackPanel>

                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="Pagamento" Foreground="#64748B" FontSize="11" Margin="0,0,0,5"/>
                    <ComboBox Width="140" Style="{StaticResource FilterControl}">
                        <ComboBoxItem Content="Todas Formas" IsSelected="True"/>
                        <ComboBoxItem Content="Dinheiro"/>
                        <ComboBoxItem Content="Cartão"/>
                        <ComboBoxItem Content="PIX"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,12,0">
                    <TextBlock Text="Status" Foreground="#64748B" FontSize="11" Margin="0,0,0,5"/>
                    <ComboBox Width="140" Style="{StaticResource FilterControl}">
                        <ComboBoxItem Content="Todos Status" IsSelected="True"/>
                        <ComboBoxItem Content="Aberto"/>
                        <ComboBoxItem Content="Pago"/>
                        <ComboBoxItem Content="Cancelado"/>
                    </ComboBox>
                </StackPanel>

                <Button Content="🔍 Filtrar" Background="#3B82F6" Foreground="White" FontWeight="Bold" 
                        Width="120" Height="38" Margin="10,18,0,0" BorderThickness="0" Cursor="Hand">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="🖨️" Background="#1E293B" Foreground="White" 
                        Width="45" Height="38" Margin="8,18,0,0" BorderThickness="0" Cursor="Hand" ToolTip="Imprimir Relatório">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" CornerRadius="12" ClipToBounds="True" BorderBrush="#1E293B" BorderThickness="1">
            <DataGrid x:Name="dgRelatorios" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Data/Hora" Binding="{Binding Data}" Width="150"/>
                    <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                    <DataGridTextColumn Header="Forma" Binding="{Binding FormaPagamento}" Width="120"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding ValorTotal}" Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>