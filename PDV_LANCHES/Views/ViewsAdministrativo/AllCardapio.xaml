<UserControl x:Class="PDV_LANCHES.Views.ViewsAdministrativo.AllCardapio"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent" Height="549" Width="1062">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style TargetType="DataGridRow">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#0F172A"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Grid Margin="24">
        <Border Background="#0F172A" CornerRadius="16" BorderBrush="#1E293B" BorderThickness="1" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="| Gestão de Cardápio" FontSize="24" FontWeight="Bold" Foreground="White"/>
                        <TextBlock Text="Controle preços e disponibilidade." Foreground="#64748B" FontSize="13"/>
                    </StackPanel>
                    <Button HorizontalAlignment="Right" Content="+ Adicionar Item" Width="180" Height="40" Background="#22C55E" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand" Click="Adicionar_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <Border Grid.Row="1" Margin="0,0,0,15" Background="#020617" CornerRadius="8" Padding="10" BorderBrush="#1E293B" BorderThickness="1">
                    <Grid>
                        <TextBlock Text="Pesquisar produto..." Foreground="#334155" VerticalAlignment="Center" Margin="10,0" IsHitTestVisible="False" 
                                   Visibility="{Binding ElementName=txtBusca, Path=Text.IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBox x:Name="txtBusca" Background="Transparent" Foreground="White" BorderThickness="0" VerticalContentAlignment="Center" Padding="10,0"/>
                    </Grid>
                </Border>

                <Border Grid.Row="2" CornerRadius="12" ClipToBounds="True" BorderBrush="#1E293B" BorderThickness="1">
                    <DataGrid x:Name="dgCardapio" AutoGenerateColumns="False" CanUserAddRows="False" Background="#020617" 
                              BorderThickness="0" RowHeight="55" HeadersVisibility="Column" GridLinesVisibility="Horizontal" 
                              HorizontalGridLinesBrush="#1E293B">
                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#1E293B"/>
                                <Setter Property="Foreground" Value="#94A3B8"/>
                                <Setter Property="Padding" Value="15,0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Height" Value="45"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Produto" Binding="{Binding Nome}" Width="*"/>
                            <DataGridTextColumn Header="Preço" Binding="{Binding Valor, StringFormat=C}" Width="120"/>
                            <DataGridTemplateColumn Header="Status" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border x:Name="StatusBadge" Padding="8,4" CornerRadius="4" HorizontalAlignment="Left">
                                            <TextBlock x:Name="StatusText" FontSize="10" FontWeight="Bold" Foreground="White"/>
                                        </Border>
                                        <DataTemplate.Triggers>
                                            <DataTrigger Binding="{Binding Disponivel}" Value="True">
                                                <Setter TargetName="StatusBadge" Property="Background" Value="#064E3B"/>
                                                <Setter TargetName="StatusText" Property="Text" Value="DISPONÍVEL"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding Disponivel}" Value="False">
                                                <Setter TargetName="StatusBadge" Property="Background" Value="#450A0A"/>
                                                <Setter TargetName="StatusText" Property="Text" Value="INDISPONÍVEL"/>
                                            </DataTrigger>
                                        </DataTemplate.Triggers>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Ações" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="E" Width="30" Height="30" Margin="0,0,5,0" Background="#1E293B" Foreground="#3B82F6" Click="Editar_Click"/>
                                            <Button Content="X" Width="30" Height="30" Background="#450A0A" Foreground="#F87171" Click="Excluir_Click"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>