<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="PDV_LANCHES.Views.ViewsAdministrativo.AllCardapio"
             Background="#020617" av:DesignHeight="464.569" av:DesignWidth="970.501">

    <Grid Margin="24">
        <Border Background="#0F172A"
                CornerRadius="16"
                BorderBrush="#1E293B"
                BorderThickness="1"
                Padding="24">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- CABEÇALHO -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <TextBlock Text="🍔 Cardápio"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"/>
                        <TextBlock Text="Gerencie os itens disponíveis para venda"
                                   FontSize="12"
                                   Foreground="#94A3B8"/>
                    </StackPanel>

                    <Button Grid.Column="1"
                            Content="➕ Adicionar item"
                            Width="180"
                            Height="42"
                            Background="#22C55E"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Adicionar_Click">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <!-- TABELA -->
                <DataGrid x:Name="dgCardapio"
                          Grid.Row="1"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          Background="#020617"
                          BorderThickness="0"
                          RowHeight="48"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          Foreground="White">

                    <!-- HEADER -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="{x:Type DataGridColumnHeader}">
                            <Setter Property="Background" Value="#020617"/>
                            <Setter Property="Foreground" Value="#94A3B8"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="Height" Value="42"/>
                            <Setter Property="BorderThickness" Value="0"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!-- LINHAS -->
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Setter Property="Background" Value="#0F172A"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1E293B"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.Columns>

                        <DataGridTextColumn Header="Nome"
                                            Binding="{Binding Nome}"
                                            Width="*"/>

                        <DataGridTextColumn Header="Categoria"
                                            Binding="{Binding Categoria}"
                                            Width="180"/>

                        <DataGridTextColumn Header="Valor"
                                            Binding="{Binding Valor, StringFormat=C}"
                                            Width="140"/>

                        <DataGridCheckBoxColumn Header="Disponível"
                                                Binding="{Binding Disponivel}"
                                                Width="120"/>

                        <!-- AÇÕES -->
                        <DataGridTemplateColumn Header="Ações" Width="160">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal"
                                                HorizontalAlignment="Center">

                                        <Button Content="✏"
                                                Width="36"
                                                Height="32"
                                                Margin="0,0,8,0"
                                                Background="#1D4ED8"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="Editar_Click">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <Button Content="🗑"
                                                Width="36"
                                                Height="32"
                                                Background="#7F1D1D"
                                                Foreground="#F87171"
                                                BorderThickness="0"
                                                Cursor="Hand"
                                                Click="Excluir_Click">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="8"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                    </DataGrid.Columns>
                </DataGrid>

            </Grid>
        </Border>
    </Grid>
</UserControl>
