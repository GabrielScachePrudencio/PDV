<UserControl x:Class="PDV_LANCHES.Views.ViewsAdministrativo.ConfiguracaoBanco"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1100">

    <UserControl.Resources>
        <Style x:Key="StatusLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="InputBase" TargetType="TextBox">
            <Setter Property="Background" Value="#020617"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" Background="#020617">
        <Grid Margin="32">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Infraestrutura de Dados" FontSize="28" FontWeight="Bold" Foreground="White"/>
                <TextBlock Text="Configure a conexão com o servidor e gerencie rotinas de segurança." Foreground="#64748B" FontSize="14"/>
            </StackPanel>

            <UniformGrid Grid.Row="1" Columns="3" Margin="0,0,0,24">
                <Border Background="#0F172A" CornerRadius="12" Padding="20" Margin="0,0,12,0" BorderBrush="#1E293B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="SERVIDOR ATUAL" Style="{StaticResource StatusLabel}"/>
                        <TextBlock x:Name="lblHost" Text="127.0.0.1" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <Border Background="#0F172A" CornerRadius="12" Padding="20" Margin="0,0,12,0" BorderBrush="#10B981" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="STATUS DA CONEXÃO" Style="{StaticResource StatusLabel}"/>
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="8" Height="8" Fill="#10B981" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Conectado" Foreground="#10B981" FontSize="18" FontWeight="Bold"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Background="#0F172A" CornerRadius="12" Padding="20" BorderBrush="#1E293B" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="ÚLTIMO BACKUP" Style="{StaticResource StatusLabel}"/>
                        <TextBlock x:Name="lblDataBackup" Text="--/--/--" Foreground="White" FontSize="18" FontWeight="Bold"/>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Grid.Row="2" Background="#0F172A" CornerRadius="12" Padding="24" BorderBrush="#1E293B" BorderThickness="1" Margin="0,0,0,24">
                <StackPanel>
                    <TextBlock Text="Parâmetros de Conexão" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,20,15"/>
                    <UniformGrid Columns="3">
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="HOST / IP" Style="{StaticResource StatusLabel}"/>
                            <TextBox x:Name="txtHost" Style="{StaticResource InputBase}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="PORTA" Style="{StaticResource StatusLabel}"/>
                            <TextBox x:Name="txtPorta" Style="{StaticResource InputBase}"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="NOME DO BANCO" Style="{StaticResource StatusLabel}"/>
                            <TextBox x:Name="txtBanco" Style="{StaticResource InputBase}"/>
                        </StackPanel>
                    </UniformGrid>

                    <UniformGrid Columns="3" Margin="0,15,0,0">
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="USUÁRIO" Style="{StaticResource StatusLabel}"/>
                            <TextBox x:Name="txtUsuario" Style="{StaticResource InputBase}"/>
                        </StackPanel>
                        <StackPanel Margin="0,0,15,0">
                            <TextBlock Text="TIPO DE CONEXÃO" Style="{StaticResource StatusLabel}"/>
                            <ComboBox x:Name="cbTipo" Height="38" Background="#020617" Foreground="White" BorderBrush="#1E293B"/>
                        </StackPanel>
                        <Button Content="Testar Conexão" Click="Testar_Click" VerticalAlignment="Bottom" Height="38" Background="#1E293B" Foreground="White" BorderThickness="1" BorderBrush="#3B82F6"/>
                    </UniformGrid>
                </StackPanel>
            </Border>

            <Border Grid.Row="3" Background="#0F172A" CornerRadius="12" Padding="20" BorderBrush="#1E293B" BorderThickness="1" Margin="0,0,0,24">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <TextBlock Text="Caminho para Backup Automático" Style="{StaticResource StatusLabel}"/>
                        <TextBox x:Name="txtCaminhoBackup" IsReadOnly="True" Style="{StaticResource InputBase}" Background="#020617"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="15,0,0,0">
                        <Button Content="Selecionar Pasta" Click="SelecionarPasta_Click" Padding="15,10" Background="#1E293B" Foreground="White" BorderThickness="0" Margin="0,0,10,0"/>
                        <Button Content="🚀 Backup Agora" Click="Backup_Click" Padding="20,10" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <StackPanel Grid.Row="4">
                <TextBlock Text="Monitoramento de Tabelas" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
                <Border CornerRadius="8" ClipToBounds="True" BorderBrush="#1E293B" BorderThickness="1">
                    <DataGrid x:Name="dgEstatisticas" Height="200" ItemsSource="{Binding SuasTabelas}">
                    </DataGrid>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>