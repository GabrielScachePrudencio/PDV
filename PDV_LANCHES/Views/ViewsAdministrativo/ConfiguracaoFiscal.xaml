<UserControl x:Class="PDV_LANCHES.Views.ViewsAdministrativo.ConfiguracaoFiscal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <UserControl.Resources>
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#94A3B8"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#1E293B"/>
            <Setter Property="Background" Value="#0F172A"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>
    </UserControl.Resources>

    <Grid Margin="20">
        <Border Background="#0F172A" CornerRadius="16" Padding="40" HorizontalAlignment="Stretch">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" Opacity="0.2" ShadowDepth="4"/>
            </Border.Effect>

            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="CONFIGURAÇÕES FISCAIS" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,5"/>
                    <TextBlock Text="Gerenciamento de tributação e emissão de notas fiscais" Foreground="#64748B" Margin="0,0,0,30"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="CNPJ" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtCnpj" MaxLength="18" TextChanged="txtCnpj_TextChanged"/>

                            <TextBlock Text="Inscrição Estadual" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtInscricaoEstadual"/>

                            <TextBlock Text="Regime Tributário" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cbRegimeTributario" Height="40" Margin="0,0,0,15">
                                <ComboBoxItem Content="Simples Nacional" IsSelected="True"/>
                                <ComboBoxItem Content="Lucro Presumido"/>
                                <ComboBoxItem Content="Lucro Real"/>
                            </ComboBox>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="CST PIS" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtCstPis"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="CST COFINS" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtCstCofins"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Ambiente de Emissão" Style="{StaticResource FieldLabel}"/>
                            <ComboBox x:Name="cbAmbiente" Height="40" Margin="0,0,0,15">
                                <ComboBoxItem Content="Homologação" IsSelected="True"/>
                                <ComboBoxItem Content="Produção"/>
                            </ComboBox>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Alíquota ICMS (%)" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtAliquotaIcms"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="CSOSN" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtCsosn"/>
                                </StackPanel>
                            </Grid>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <TextBlock Text="Série NF" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtSerieNf"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <TextBlock Text="Último Nº NF" Style="{StaticResource FieldLabel}"/>
                                    <TextBox x:Name="txtUltimoNumeroNf"/>
                                </StackPanel>
                            </Grid>

                            <TextBlock Text="Caminho do Certificado (.pfx)" Style="{StaticResource FieldLabel}"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtCaminhoCertificado" IsReadOnly="True" Margin="0,0,5,15"/>
                                <Button Grid.Column="1" Content="..." Width="40" Height="40" VerticalAlignment="Top" 
                                        Background="#1E293B" Foreground="White" BorderThickness="0" Cursor="Hand" Click="btnSelecionarCertificado_Click">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="8"/>
                                        </Style>
                                    </Button.Resources>
                                </Button>
                            </Grid>

                            <TextBlock Text="Validade Certificado" Style="{StaticResource FieldLabel}"/>
                            <TextBox x:Name="txtValidadeCertificado" IsReadOnly="True"/>
                        </StackPanel>
                    </Grid>

                    <Button x:Name="btnSalvar" Content="Salvar Configurações" Height="50" Width="280" 
                            HorizontalAlignment="Right" Background="#3B82F6" Foreground="White" 
                            FontWeight="Bold" BorderThickness="0" Margin="0,20,0,0" Click="btnSalvar_Click">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>