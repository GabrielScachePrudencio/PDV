<UserControl x:Class="PDV_LANCHES.Views.ViewsAdministrativo.ConfiguracaoFiscal"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <Grid Margin="40">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel MaxWidth="800" HorizontalAlignment="Left">

                <TextBlock Text="Configurações Gerais" FontSize="28" FontWeight="Bold" Foreground="#0F172A" Margin="0,0,0,10"/>
                <TextBlock Text="Gerencie as informações básicas da sua empresa." Foreground="#64748B" FontSize="14" Margin="0,0,0,40"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,50,0">
                        <TextBlock Text="Logotipo" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#475569"/>
                        <Border Width="160" Height="160" Background="#F8FAF8" BorderBrush="#E2E8F0" BorderThickness="2" CornerRadius="12">
                            <Grid>
                                <Image x:Name="pdvLogo" Stretch="Uniform" Cursor="Hand"  Margin="5"/>
                                <TextBlock Text="Clique para alterar" VerticalAlignment="Bottom" HorizontalAlignment="Center" 
                                           FontSize="10" Foreground="#94A3B8" Margin="0,0,0,10" IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Nome da Empresa (Razão Social / Fantasia)" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,8"/>
                        <TextBox x:Name="pdvNome" Height="45" Margin="0,0,0,20" VerticalContentAlignment="Center" Padding="15,0" 
                                 BorderBrush="#E2E8F0" BorderThickness="1.5"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Telefone de Contato" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,8"/>
                                <TextBox x:Name="pdvTelefone" Height="45" Margin="0,0,0,20" VerticalContentAlignment="Center" Padding="15,0" BorderBrush="#E2E8F0"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="E-mail Corporativo" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,8"/>
                                <TextBox x:Name="pdvEmail" Height="45" Margin="0,0,0,20" VerticalContentAlignment="Center" Padding="15,0" BorderBrush="#E2E8F0"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="Endereço da Sede" FontWeight="SemiBold" Foreground="#475569" Margin="0,0,0,8"/>
                        <TextBox x:Name="pdvEndereco" Height="45" Margin="0,0,0,30" VerticalContentAlignment="Center" Padding="15,0" BorderBrush="#E2E8F0"/>

                        <Button Content="Salvar Configurações" Height="50" Width="250" HorizontalAlignment="Left"
                                Background="#3B82F6" Foreground="White" FontWeight="Bold" FontSize="14" BorderThickness="0" Cursor="Hand">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="10"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>