<Window x:Class="PDV_LANCHES.Views.CardapioCompleto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#0f172a" 
        Title="Cardápio Completo" Height="600" Width="1000">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="ListaCardapioCompleto">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="230"
                                Margin="0,0,15,15"
                                Background="#1e293b" 
                                BorderBrush="#334155"
                                BorderThickness="1"
                                CornerRadius="12"
                                Padding="15">
                            <StackPanel>
                                <Border CornerRadius="8" ClipToBounds="True" Margin="0,0,0,10">
                                    <Image Source="{Binding pathImg}"
                                           Width="200"
                                           Height="120"
                                           Stretch="UniformToFill"/>
                                </Border>

                                <TextBlock Text="{Binding Nome}"
                                           FontSize="16"
                                           FontWeight="Bold"
                                           Foreground="White" 
                                           Margin="0,5"/>

                                <TextBlock Text="{Binding Valor, StringFormat='R$ {0:F2}'}"
                                           FontSize="18"
                                           FontWeight="Bold"
                                           Foreground="#60a5fa"/>
                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="65"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Text="{Binding QuantidadeSelecionada, UpdateSourceTrigger=PropertyChanged}"
                                     Height="38"
                                     Background="#0f172a"
                                     Foreground="White"
                                     BorderBrush="#475569"
                                     BorderThickness="1"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     FontSize="14"
                                     FontWeight="Bold"
                                     Margin="0,0,8,0">          
                                        <TextBox.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="6"/>
                                            </Style>
                                        </TextBox.Resources>
                                    </TextBox>

                                    <Button Grid.Column="1"
                                    Content="ADICIONAR"
                                    Height="38"
                                    Background="#3b82f6"
                                    Foreground="White"
                                    FontWeight="Bold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="AdicionarItem_Click"
                                    Tag="{Binding}">            
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="8"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <Border Grid.Row="1"
                Background="#1e293b"
                BorderBrush="#334155"
                BorderThickness="1"
                CornerRadius="15"
                Padding="25"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="CPF DO CLIENTE"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#94a3b8"/>
                    <TextBlock x:Name="txtCpf"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="White"/>
                </StackPanel>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="TOTAL DO PEDIDO"
                               FontSize="11"
                               FontWeight="SemiBold"
                               Foreground="#94a3b8"/>
                    <TextBlock x:Name="txtTotal"
                               FontSize="32"
                               FontWeight="ExtraBold"
                               Foreground="#22c55e"/>
                </StackPanel>

                <Button Grid.Column="2"
                        Content="CONFIRMAR PEDIDO"
                        Width="220"
                        Height="55"
                        Background="#22c55e"
                        Foreground="White"
                        FontWeight="ExtraBold"
                        FontSize="14"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Confirmar_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="12"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>